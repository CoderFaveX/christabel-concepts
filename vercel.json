{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.mts",
      "use": "@vercel/node"
    },
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.mts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
