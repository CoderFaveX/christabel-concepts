{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "src/api", // Output directory matches source
    "rootDir": "src/store", // Source directory
    "allowJs": false,
    "declaration": false,
    "isolatedModules": true,
    "strict": true,
    "noEmitOnError": true
  },
  "include": ["src/store/**/*"],
  "exclude": ["node_modules", "dist"]
}
